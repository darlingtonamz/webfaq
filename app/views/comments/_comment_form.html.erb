<%= form_for @comment, :url => {:action => 'create'}, remote: true, html:{id: "comment_form_#{@question.id}"} do |f|%>
	<%= f.text_area :content, size: '80', placeholder: "What do you think? "%> 
	<%= button_tag(type: 'submit', alt: 'Find', class: 'btn btn-primary floating_button') do %>
    	<%= image_tag('send2x.png') %>
	<% end %>
	<%= hidden_field_tag 'user_id', @question.faq.user_id %>
	<%= hidden_field_tag 'question_id', @question.id %>
<% end %>