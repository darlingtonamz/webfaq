	<div class="container">
		<%= button_tag "Create QA", :id => "popup", class: 'btn btn-primary', :onclick=>"div_show()" %>
	</div>

	<div>
		<% @questions.each do |q|%>
			<div class="row qmain distant card">
				<div class="qtop distant">					
					<div class="qleft">
						<div class="qhead distant">
							<%= link_to  q.content, user_faq_question_path(@user, @faq, q) %>
						</div>
						<div class="qanswer distant">
							<%= q.answer %>
						</div>
					</div>
					<div class="qright">
						<div class="voteup"><%= link_to image_tag('up2x.png', class: 'voteimg') %></div>
						<div class="vrating">
							<%= q.ratings.size %>
						</div>
						<div class="votedown"><%=link_to image_tag('down2x.png', class: 'voteimg') %></div>
					</div>
				</div>
				<div class="qbottom row">
					<div class="col-sm-10 col-xs-8">
						<%= link_to image_tag('comment1x.png'), comment_path(:new, user_id: q.faq.user_id, question_id: q.id), id: "comment_but_#{q.id}", remote: true %>
					</div>
					<div id="comment_count_<%= q.id %>" class="col-sm-2 col-xs-4 right">
						<%= link_to "#{q.comments.size} comments", comments_path(user_id: q.faq.user_id, question_id: q.id), remote: true %>
					</div>
				</div>
				<div id="more_comment_<%= q.id %>" class="container"></div>
			</div>
		<% end %>
	</div>


<div id="body" style="overflow:hidden;">
